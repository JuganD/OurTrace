@using Microsoft.AspNetCore.Identity
@using OurTrace.Data.Identity.Models
@inject SignInManager<OurTraceUser> SignInManager
@inject UserManager<OurTraceUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="user-info">
        <a href="#" onclick="return false" title="">@User.Identity.Name</a>
    </div>
    <div class="user-account-settingss">
        <div class="us-links">
            <a asp-controller="User" asp-action="Profile" asp-route-username="@User.Identity.Name" title="" style="padding-left:40%;padding-right:40%;">Profile</a>
        </div>
        <h3>Online Status</h3>
        <ul class="on-off-status">
            <li>
                <div class="fgt-sec">
                    <input type="radio" name="cc" id="c5">
                    <label for="c5">
                        <span></span>
                    </label>
                    <small>Online</small>
                </div>
            </li>
            <li>
                <div class="fgt-sec">
                    <input type="radio" name="cc" id="c6">
                    <label for="c6">
                        <span></span>
                    </label>
                    <small>Offline</small>
                </div>
            </li>
        </ul>
        <h3>Custom Status</h3>
        <div class="search_form">
            <form>
                <input type="text" name="search">
                <button type="submit">Ok</button>
            </form>
        </div><!--search_form end-->
        <h3>Setting</h3>
        <ul class="us-links">
            <li><a asp-controller="Settings" asp-action="Index" title="">Account Settings</a></li>
        </ul>
        <h3 class="tc"><a asp-controller="User" asp-action="Logout" title="">Logout</a></h3>
    </div><!--user-account-settingss end-->
}
else
{
    <div class="user-info">
        <a asp-controller="User" asp-action="Authenticate">Login / Register</a>
    </div>
}