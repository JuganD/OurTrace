@using OurTrace.App.Models.ViewModels.Advert
@model ICollection<AdvertViewModel>

<table class="table table-dark table-bordered col-md-7 offset-5 table-striped mb-0 table-hover">
    <thead>
        <tr>
            @foreach (var property in typeof(AdvertViewModel).GetProperties())
            {
                <th scope="col">@property.Name</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var advert in Model)
        {
            <tr class='clickable-row' style="cursor:pointer">
                @foreach (var prop in advert.GetType().GetProperties())
                {
                    <td><span name="@prop.Name" href="" class="text-white" onclick="return false;">@prop.GetValue(advert)</span></td>
                }
            </tr>
        }
    </tbody>
</table>